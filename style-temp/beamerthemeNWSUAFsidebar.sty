%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\RequirePackage{tikz}
\usetikzlibrary{external}
\RequirePackage{calc}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% 主题选项和定义
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%%% 主题选项
\DeclareOptionBeamer{width}{\PassOptionsToPackage{width=#1}{beamerouterthemeNWSUAFsidebar}}
\DeclareOptionBeamer{hideothersubsections}{\PassOptionsToPackage{hideothersubsections}{beamerouterthemeNWSUAFsidebar}}
\DeclareOptionBeamer{hideallsubsections}{\PassOptionsToPackage{hideallsubsections}{beamerouterthemeNWSUAFsidebar}}
\DeclareOptionBeamer{hidetitle}{\PassOptionsToPackage{hidetitle}{beamerouterthemeNWSUAFsidebar}}
\DeclareOptionBeamer{hideauthor}{\PassOptionsToPackage{hideauthor}{beamerouterthemeNWSUAFsidebar}}
\DeclareOptionBeamer{hideinstitute}{\PassOptionsToPackage{hideinstitute}{beamerouterthemeNWSUAFsidebar}}
\DeclareOptionBeamer{shownavsym}{\PassOptionsToPackage{shownavsym}{beamerouterthemeNWSUAFsidebar}}
\DeclareOptionBeamer{lightheaderbg}{\PassOptionsToPackage{lightheaderbg}{beamercolorthemeNWSUAFsidebar}}
\DeclareOptionBeamer{left}{%
  \PassOptionsToPackage{left}{beamerouterthemeNWSUAFsidebar}%
  \PassOptionsToPackage{left}{beamerinnerthemeNWSUAFsidebar}%
  }
\DeclareOptionBeamer{right}{%
  \PassOptionsToPackage{right}{beamerouterthemeNWSUAFsidebar}%
  \PassOptionsToPackage{right}{beamerinnerthemeNWSUAFsidebar}%
  }
\ProcessOptionsBeamer

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% beamer特殊选项
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\mode<presentation>%参考前四个模式(beamer,handout,second and trans).也就是说，除article外的所有模式
{
  \useinnertheme{NWSUAFsidebar}
  \useoutertheme{NWSUAFsidebar}
  \usecolortheme{NWSUAFsidebar}
}%end of beamer specific options

\mode<all>

